generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SyncShow {
  id         Int      @id @default(autoincrement())

  // Business identity (from API)
  movieID    String
  cinemaId   Int
  screenName String
  showTime   DateTime

  // Attributes
  title      String
  rating     String?
  length     Int?
  format     String?
  genere     String?
  isActive   String?

  imageUrl   String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([movieID, cinemaId, screenName, showTime])
}

model MasterShow {
  id         Int      @id @default(autoincrement())

  // Same business identity
  movieID    String
  cinemaId   Int
  screenName String
  showTime   DateTime

  // Authoritative attributes
  title      String
  rating     String?
  length     Int?
  format     String?
  genere     String?
  isActive   String?

  imageUrl   String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([movieID, cinemaId, screenName, showTime])
}
